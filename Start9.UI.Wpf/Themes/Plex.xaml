                        <Trigger Property="VerticalScrollBarVisibility" Value="Visible">
                            <Setter Property="Padding" Value="4,4,12,4" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
